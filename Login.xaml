<Page x:Class="WpfApp6.Login"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp6"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Login">

    <Grid Background="AliceBlue">
        
        <Label FontSize="25" Margin="10,77,693,312">Email:</Label>
        <Label FontSize="25" Margin="10,175,665,214">Password:</Label>

        <TextBox x:Name="Emailb" Margin="140,77,392,330" />
        <TextBox x:Name="Passb" Margin="140,175,392,232"/>

        <Button Height="50" Width="150" Margin="85,337,565,63" FontSize="20" FontWeight="Bold" Click="Button_Click_2">Login</Button>
        <Button Height="50" Margin="568,337,66,63" FontSize="20" FontWeight="Bold" Click="Button_Click_1">Forgot Password</Button>
        <Button Height="50" Width="150" Margin="325,337,325,63" FontSize="20" FontWeight="Bold" Click="Button_Click">SignUp</Button>



    </Grid>
</Page>
